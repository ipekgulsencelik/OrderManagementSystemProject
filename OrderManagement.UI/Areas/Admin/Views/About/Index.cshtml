@model List<ResultAboutDTO>

@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						@if (Model.Count() > 0)
						{
							<div class="card-sub">
								Hakkımızda ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
							</div>
							<table class="table table-hover table-bordered mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th>Başlık</th>
										<th>Açıklama</th>
										<th scope="col">Durum</th>
										<th>Gösterilme Durumu</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
										<th>Ana Sayfada</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<th>@count</th>
											<td><img src="@item.ImageUrl" style="width:75px;height:75px;border-radius:50%" />   @item.Title</td>
											<td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) : item.Description)</td>
											<td>
											<td>
												@{
													if (item.Status == true)
													{
														<button onclick="changeStatus(@item.AboutID)" type="submit" class="btn btn-success">Aktif</button>
													}
													else
													{
														<button onclick="changeStatus(@item.AboutID)" type="submit" class="btn btn-danger">Pasif</button>
													}
												}
											</td>
											<td>@(item.IsShown ? "Gösteriliyor" : "Gösterilmiyor") </td>
											<td>
												<button onclick="deleteAbout(@item.AboutID)" type="submit" class="btn btn-outline-danger"><i class="la la-trash"></i> Sil</button>
											</td>
											<td>
												<a href="/Admin/About/UpdateAbout/@item.AboutID" class="btn btn-outline-info"><i class="la la-pencil"></i> Güncelle</a>
											</td>
											<td>
												<a asp-action="ShowOnHome" asp-controller="About" asp-area="Admin" asp-route-id="@item.AboutID" class="btn btn-outline-success"> Göster</a>
												<a asp-action="DontShowOnHome" asp-controller="About" asp-area="Admin" asp-route-id="@item.AboutID" class="btn btn-outline-secondary"> Gösterme</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						}
						else
						{
							<p>Kayıtlı Herhangi Bir Hakkımızda Bilgisi Verisi Bulunmamaktatır.</p>
						}
						<a href="/Admin/About/CreateAbout/" class="btn btn-outline-primary"><i class="la la-plus-circle"></i> Yeni Hakkımızda</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	function deleteAbout(id) {
		Swal.fire({
			title: 'Silmek istediğinize emin misiniz?',
			text: 'Bu öğeyi silerseniz geri alamazsınız!',
			icon: 'warning',
			showCancelButton: true,
			confirmButtonText: 'Sil',
			cancelButtonText: 'İptal'
		}).then((result) => {
			if (result.isConfirmed) {
				window.location.href = "/Admin/About/DeleteAbout?id=" + id;
			}
		});
	}
</script>

<script>
	function changeStatus(id) {
		Swal.fire({
			title: 'Durum',
			text: 'Durumu değiştirmek istediğinizden emin misiniz?',
			icon: 'question',
			showCancelButton: true,
			confirmButtonText: 'Değiştir',
			cancelButtonText: 'İptal'
		}).then((result) => {
			if (result.isConfirmed) {
				window.location.href = "/Admin/About/ChangeStatus?id=" + id;
			}
		});
	}
</script>