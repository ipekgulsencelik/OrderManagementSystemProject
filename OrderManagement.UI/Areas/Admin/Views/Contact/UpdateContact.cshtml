@model UpdateContactDTO

@{
    ViewData["Title"] = "İletişim Bilgisi Güncelleme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title"> İletişim Bilgisi Güncelle</h3>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="ContactID" />
            <label>Konum</label>
            <input type="text" asp-for="Location" class="form-control" />
            <br />
            <label>Telefon</label>
            <input type="text" asp-for="Phone" class="form-control" />
            <br />
            <label>Email</label>
            <input type="email" asp-for="Email" class="form-control" />
            <br />
            <label>Açıklama</label>
            <textarea type="text" asp-for="FooterDescription" class="form-control" rows="5"></textarea>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="IsShown">
                    <span class="form-check-sign">Ana Sayfada Gösterilsin</span>
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="Status">
                    <span class="form-check-sign">Durum</span>
                </label>
            </div>
            <button type="submit" class="btn btn-outline-info btn-round">Güncelle</button>
        </form>
    </div>
</div>