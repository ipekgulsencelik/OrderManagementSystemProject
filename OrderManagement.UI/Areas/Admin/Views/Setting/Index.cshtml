@model UserEditDTO

@{
    ViewData["Title"] = "Ayarlar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Şifre ve Bilgi Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Adınız</label>
                                <input type="text" asp-for="Name" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Soyadınız</label>
                                <input type="text" asp-for="Surname" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" asp-for="Email" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Kullanıcı Adınız</label>
                                <input type="text" asp-for="UserName" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Şu Anki Şifreniz</label>
                                <input type="password" asp-for="OldPassword" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Yeni Şifreniz</label>
                                <input type="password" asp-for="Password" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Yeni Şifrenizi Tekrar Girin</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" required />
                            </div>
                            <p style="background-color:red"> @Html.ValidationSummary()</p>
                            <div class="card-action">
                                <button class="btn btn-outline-primary btn-round"><i class="la la-pencil"></i> Verileri Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>