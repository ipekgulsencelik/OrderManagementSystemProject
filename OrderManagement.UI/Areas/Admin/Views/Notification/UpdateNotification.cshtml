@model UpdateNotificationDTO

@{
    ViewData["Title"] = "Bildirim Güncelleme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Bildirim Güncelle</h3>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="NotificationID" />
            <label>Bildirim Rengi</label>
            <select asp-for="Type" class="form-control">
                <option>Rengi Seçiniz</option>
                <option value="notif-primary">Mavi</option>
                <option value="notif-danger">Kırmızı</option>
                <option value="notif-success">Yeşil</option>
                <option value="notif-info">Turkuaz</option>
                <option value="notif-warning">Sarı</option>
            </select>
            <br />
            <label>Açıklama</label>
            <input type="text" asp-for="Description" class="form-control" />
            <br />
            <label>Tarih</label>
            <input type="datetime-local" asp-for="Date" class="form-control" />
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="Status">
                    <span class="form-check-sign">Okundu Olarak İşaretle ( Boş bırakılırsa okunmamış olarak kayıt edilecektir.)</span>
                </label>
            </div>
            <label>İkon</label>
            <select asp-for="Icon" class="form-control">
                <option>İkon Seçiniz</option>
                <option value="la la-user-plus">Yeni Kişi</option>
                <option value="la la-comment">Yeni Yorum</option>
                <option value="la la-heart">Kalp</option>
            </select>
            <br />
            <button type="submit" class="btn btn-outline-success">Güncelle</button>
        </form>
    </div>
</div>