@model UpdateCategoryDTO

@{
    ViewData["Title"] = "Kategori Güncelleme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategori Güncelle</h3>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="CategoryID" />
            <label>Kategori Adı</label>
            <input type="text" asp-for="CategoryName" class="form-control" />
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="IsShown">
                    <span class="form-check-sign">Ana Sayfada Gösterilsin</span>
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="Status">
                    <span class="form-check-sign">Durum</span>
                </label>
            </div>
            <button type="submit" class="btn btn-outline-info btn-round">Güncelle</button>
        </form>
    </div>
</div>